# Cricket Platform Environment Variables
# Copy this file to .env.local and fill in your values

# Node Environment
NODE_ENV=development

# Application URLs
NEXT_PUBLIC_WEB_URL=http://localhost:3000
NEXT_PUBLIC_DOCS_URL=http://localhost:3001

# Supabase Configuration (REQUIRED)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Play-Cricket API (for match imports)
PLAY_CRICKET_API_TOKEN=your_play_cricket_api_token_here
PLAY_CRICKET_SITE_ID=your_site_id_here

# Feature Flags
NEXT_PUBLIC_ENABLE_PUBLIC_LEADERBOARD=true
